
@model dynamic

@{
    ViewBag.Title = "Progress Report";
}
<div id="ProgressHeader">
    <h1>@ViewBag.Name</h1>
    <h3><a href="mailto: @ViewBag.Email">@ViewBag.Email</a></h3>
</div>
<div class="Courses">
    <h3>Incomplete Courses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Course
                </th>
                <th>
                    Lessons Remaining
                </th>
                <th>
                    Percent Complete
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Incomplete)
            {
                <tr>
                    <td>
                        @item.CourseName
                    </td>
                    <td>
                        @item.LessonsRemaining
                    </td>
                    <td>
                        @item.PercentComplete%
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="Courses">
    <h3>Completed Courses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Course
                </th>
                <th>
                    Years Valid
                </th>
                <th>
                    Date Completed
                </th>
                <th>
                    Expiration Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Complete)
            {
                <tr>
                    <td>
                        @item.CourseName
                    </td>
                    <td>
                        @if (item.ValidFor < 10)
                {
                            @item.ValidFor
                        }

                    </td>
                    <td>
                        @item.DateCompleted.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @if (item.ExpirationDate < DateTime.Now)
                {
                            <span class="Expired">EXPIRED</span> @:on
                }
                        <span class="@(item.ExpirationDate <= DateTime.Now.AddMonths(1) ? "ExpiresSoon" : "Current")">@item.ExpirationDate.ToString("MM/dd/yyyy")</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
    $(document).ready( function () {
        $('.table').DataTable({
            paging: false,
            searching: false,
            info: false
        });
    } );
    </script>
}