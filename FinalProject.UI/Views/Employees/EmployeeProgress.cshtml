@model dynamic
@{
    ViewBag.Title = "Employee Progress";
}

<h1>Incomplete Courses</h1>
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Lessons Remaining
        </th>
        <th>
            Percent Complete
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Incomplete)
    {
        <tr>
            <td>
                @item.CourseName
            </td>
            <td>
                @item.LessonsRemaining
            </td>
            <td>
                @item.PercentComplete%
            </td>
            <td><a href="@Url.Action("Details","Courses", new { id = item.CourseID })">Go to Course</a></td>
        </tr>
    }

</table>

<h1>Completed Courses</h1>
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Description
        </th>
        <th>
            Years Valid
        </th>
        <th>
            Date Completed
        </th>
        <th>
            Expiration Date
        </th>        
    </tr>

    @foreach (var item in Model.Complete)
    {
        <tr>
            <td>
                @item.CourseName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.ValidFor
            </td>
            <td>
                @item.DateCompleted.ToString("MM/dd/yyyy")
            </td>
            <td>
                @item.ExpirationDate.ToString("MM/dd/yyyy")
            </td>
        </tr>
    }

</table>

